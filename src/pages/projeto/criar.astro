---
import { db } from "../../db";
import { projects } from "../../db/schema";

let message: string = "";
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();

    await db.insert(projects).values({
      title: formData.get("title") as string,
      startDate: formData.get("startDate") as string,
      endDate: formData.get("endDate") as string,
      collaborators: formData.get("collaborators") as string,
      description: formData.get("description") as string,
      results: formData.get("results") as string,
      status: Number(formData.get("status") as string),
    });

    message = "Projeto criado com sucesso!";
  } catch (error) {
    message = "Erro ao criar projeto!!!";
  }
}
---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Criar Projeto</title>
  </head>
  <body class="bg-gray-100">
    {message && <h1 class="text-3xl font-bold mb-4">{message}</h1>}
    <div class="container mx-auto p-8">
      <h1 class="text-3xl font-bold mb-4">Criar Projeto</h1>
      <form
        action=""
        method="post"
        enctype="multipart/form-data"
        class="max-w-lg mx-auto"
      >
        <div class="mb-4">
          <label for="title" class="block text-gray-700 font-bold mb-2"
            >Título</label
          >
          <input
            type="text"
            id="title"
            name="title"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="dob" class="block text-gray-700 font-bold mb-2"
            >Data de Início</label
          >
          <input
            type="date"
            id="startDate"
            name="startDate"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="endDate" class="block text-gray-700 font-bold mb-2"
            >Data de Término</label
          >
          <input
            type="date"
            id="endDate"
            name="endDate"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="university" class="block text-gray-700 font-bold mb-2"
            >Colaboradores</label
          >
          <input
            type="text"
            id="collaborators"
            name="collaborators"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="university" class="block text-gray-700 font-bold mb-2"
            >Descrição</label
          >
          <input
            type="text"
            id="description"
            name="description"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="university" class="block text-gray-700 font-bold mb-2"
            >Resultados</label
          >
          <input
            type="text"
            id="results"
            name="results"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>

        <div class="mb-4">
          <label for="university" class="block text-gray-700 font-bold mb-2"
            >Situação</label
          >

          <input
            type="number"
            id="status"
            name="status"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
            min="0"
            max="3"
            step="1"
            value="0"
          />
        </div>

        <button
          type="submit"
          class="bg-indigo-500 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600"
          >Enviar</button
        >
      </form>
    </div>
  </body>
</html>
