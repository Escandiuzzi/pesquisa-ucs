---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Criar pesquisador</title>
  </head>
  <body class="bg-gray-100">
    {message && <h1 class="text-3xl font-bold mb-4">{message}</h1>}
    <div class="container mx-auto p-8">
      <h1 class="text-3xl font-bold mb-4">Criar pesquisador</h1>
      <form
        action=""
        method="post"
        enctype="multipart/form-data"
        class="max-w-lg mx-auto"
      >
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-bold mb-2"
            >Nome</label
          >
          <input
            type="text"
            id="name"
            name="name"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="photo_url" class="block text-gray-700 font-bold mb-2"
            >Foto de perfil</label
          >
          <input
            type="url"
            id="photo_url"
            name="photo_url"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="university" class="block text-gray-700 font-bold mb-2"
            >Universidade</label
          >
          <input
            type="text"
            id="university"
            name="university"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="area" class="block text-gray-700 font-bold mb-2"
            >Áreas de Pesquisa</label
          >
          <input
            type="text"
            id="area"
            name="area"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="main_area" class="block text-gray-700 font-bold mb-2"
            >Área Principal</label
          >
          <input
            type="text"
            id="main_area"
            name="main_area"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="dob" class="block text-gray-700 font-bold mb-2"
            >Data de Nascimento</label
          >
          <input
            type="date"
            id="dob"
            name="dob"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          />
        </div>
        <div class="mb-4">
          <label for="contact_info" class="block text-gray-700 font-bold mb-2"
            >Informações de contato</label
          >
          <textarea
            id="contact_info"
            name="contact_info"
            class="w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-1"
          ></textarea>
        </div>

        <button
          type="submit"
          class="bg-indigo-500 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600"
          >Enviar</button
        >
      </form>
    </div>
  </body>
</html>
